<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tiago.busbasix.BusInfoActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#5AA67B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/linhaName"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/linhaName"
            android:layout_marginTop="18dp"
            android:text="Linha"
            android:textColor="#47525E"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/linhaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ratingBar"
            android:layout_alignRight="@+id/ratingBar"
            android:layout_below="@+id/textView"
            android:text="422"
            android:textColor="#47525E"
            android:textSize="32dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:background="@drawable/com_facebook_auth_dialog_cancel_background"
            android:src="@mipmap/busbasix_icon"
            app:srcCompat="@mipmap/busbasix_icon" />


        <TextView
            android:id="@+id/rate_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="53dp"
            android:text="Conforto"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rate_title"
            android:layout_alignStart="@+id/rate_title"
            android:layout_alignTop="@+id/rate_title"
            android:layout_marginTop="35dp" />

        <TextView
            android:id="@+id/conforto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="180dp"
            android:text="Segurança"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Temperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperatura"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/ratingBar_conforto"
            android:layout_alignLeft="@+id/ratingBar_conforto"
            android:layout_alignStart="@+id/ratingBar_conforto"
            android:layout_marginTop="39dp" />

        <TextView
            android:id="@+id/temperatura_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="38ºC"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_below="@+id/Temperatura"
            android:layout_alignLeft="@+id/Temperatura"
            android:layout_alignStart="@+id/Temperatura"
            android:layout_marginTop="18dp" />

        <RatingBar
            android:id="@+id/ratingBar_conforto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rate_title"
            android:layout_alignStart="@+id/rate_title"
            android:layout_alignTop="@+id/rate_title"
            android:layout_marginTop="165dp" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
